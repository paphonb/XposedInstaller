        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">#1f000000</item>
    </style>

    <style name="Theme.XposedInstaller.Dark" parent="Theme.XposedInstaller.Dark.V21">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>

    <style name="Theme.XposedInstaller.Dark.Black" parent="Theme.XposedInstaller.Dark.Black.V21">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@android:color/transparent</item>
    </style>
</resources>